<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ejercicio_final2.MenuActivity"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/colorYellowEgg">

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nueva serie"
        android:onClick="MBtnNuevaSerie"
        android:background="@drawable/fondo_botones"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ver Series"
        android:layout_marginTop="10dp"
        android:onClick="MBtnVerSeries"
        android:background="@drawable/fondo_botones"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>
</LinearLayout>
